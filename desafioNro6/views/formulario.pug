html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width initial-scale=1.0")
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous")
        title='Desafio_6'

    body
        div(class="center")
            h1 Ingrese producto

            div 
                form(action="/api/productos" method="post" class="" id="productForm")
                    div(class="form-group row")
                        label(for="title" class="col-md-4 col-form-label" class style="color: white") Producto:
                        div(class="col-md-8 p-1")
                            input(type="text" id="title" name="title" style ="width:100%")

                    div(class="form-group row")
                        label(for="price" class="col-md-4 col-form-label" class style="color: white") Precio:
                        div(class="col-md-8 p-1")
                            input(type="number" id="price" name="price")

                    div(class="form-group row")
                        label(for="thumbnail" class="col-md-4 col-form-label" class style="color: white") Imagen: 
                        div(class="col-md-8 p-1")
                            input(type="text" id="thumbnail" name="thumbnail" style ="width:100%")

                    div(class="form-group row mt-2")
                        div(class="col-md-10")
                            input(value="Enviar" class="btn btn-warning" type="submit")

            h2(class="tituloCentrado separacion") Vista de productos 

            div(class="center")
                div(class="row")
            div(class="col-md-12  mx-auto"  style="width:600px")
                if hasProducts
                    table.table
                        thead
                            tr
                                th(scope='col') Nombre
                                th(scope='col') Precio
                                th(scope='col') Foto
                        tbody(id="tableContent")
                            each product in productArray
                                tr
                                    td= product.title 
                                    td= product.value
                                    td 
                                        img(src=product.thumbnail alt="im√°gen" class="imagenAdaptada")
                else
                    div
                        h2 No se encontraron productos!
                        
    h2(class="tituloCentrado separacion") Centro de Mensajes
    div(class="container" style="width:600px")
        div(class="row")
            div(class="col-md-12")
                form(action="" method="" class="" id="chatForm")
                    div(class="form-floating mb-3")  
                        input(type="email" class="form-control" id="email" placeholder="Email" name="email" required)
                        label(for="foto") Email
                    div(class="form-floating mb-3" id="chat")
                    div(class="row")
                        div(class="col-md-12")
                            div(class="form-floating mb-3")  
                                input(type="text" class="form-control" id="message" placeholder="Mensaje" name="menssage" required)
                                label(for="mesage" id="message") Mensaje
                        div(class="col-md-12")
                            div(class="form-floating mb-3 text-center")
                                input(class="btn btn-info" type="submit" value="Enviar")

    script(src="/socket.io/socket.io.js")
    script(src="/js/cliente.js")

