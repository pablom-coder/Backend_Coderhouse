html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width initial-scale=1.0")
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous")
        title='Desafio_5'

    body
        div(class="center")
            h1 Ingrese producto

            form(class="bg-secondary p-4 mb-2" style="width: 600px;" action="/api/productos" method="POST")
                div(class="form-group row")
                    label(for="title" class="col-md-4 col-form-label" class style="color: white") Producto:
                    div(class="col-md-8 p-1")
                        input(type="text" id="title" name="title" style ="width:100%")

                div(class="form-group row")
                    label(for="price" class="col-md-4 col-form-label" class style="color: white") Precio:
                    div(class="col-md-8 p-1")
                        input(type="number" id="price" name="price")

                div(class="form-group row")
                    label(for="thumbnail" class="col-md-4 col-form-label" class style="color: white") Imagen: 
                    div(class="col-md-8 p-1")
                        input(type="text" id="thumbnail" name="thumbnail" style ="width:100%")

                div(class="form-group row mt-2")
                    div(class="col-md-10")
                        input(value="Enviar" class="btn btn-warning" type="submit")


            form(class="p-3" action="api/productos" method="get")
                button(class="btn btn-dark") Ver productos